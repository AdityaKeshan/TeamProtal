<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
        android:layout_width="40dp"
        android:id="@+id/side"
        android:layout_height="100dp"
        android:background="@drawable/ic_side_btn"
        android:src="@drawable/ic_side_btn"
        android:layout_alignParentLeft="true"
        android:foreground="@drawable/ic_side_btn"

        android:layout_centerVertical="true"/>
<include
    layout="@layout/toolbar"
    android:id="@+id/toolbar"
    />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/toolbar"
        android:id="@+id/head_image"
        android:scaleType="fitXY"
        android:src="@drawable/images"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lin"
        android:layout_below="@id/head_image"
        android:layout_marginTop="-65dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOHNY DEPP"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textSize="30sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="2dp"
            android:text="Mexican Chef | Indian Foodie"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#232323"
        android:layout_below="@+id/lin">
        <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/scroll1"
            android:layout_height="250dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/about"
                android:textColor="#FFFFFF"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="About"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/about1"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="1dp"
                    android:textSize="15sp"
                    android:layout_below="@+id/about"
                    android:text=""/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/lin1"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/about1"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginTop="20dp"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="32sp"
                            android:textColor="#FFFFFF"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="UPLOADS"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:textColor="#FFFFFF"/>
                        <ImageButton
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_heart_btn"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="100"
                            android:textColor="#FFFFFF"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="BUZZES"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:textColor="#FFFFFF"/>
                        <ImageButton
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_star_btn"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="32sp"
                            android:textColor="#FFFFFF"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="FOLLOWERS"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:textColor="#FFFFFF"/>
                        <ImageButton
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_heart_btn"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>
                </LinearLayout>
                <ImageButton
                    android:layout_width="150dp"
                    android:src="@drawable/ic_plus_btn"
                    android:layout_height="50dp"
                    android:layout_below="@+id/lin1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
        </ScrollView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:scrollbars="none"
            android:scrollbarSize="0dp"
            android:overScrollMode="never"
            android:id="@+id/recy"
            android:layout_below="@+id/scroll1"/>
    </RelativeLayout>
</RelativeLayout>